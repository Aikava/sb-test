{
  "name": "sb-test",
  "version": "1.0.0",
  "description": "Test task from sberbank",
  "main": "main.ts",
  "scripts": {
    "start:server": "node server/main.js",
    "start:server:dev": "NODE_ENV=local NODE_PATH=./src NODE_CONFIG_DIR=./src/server/config node -r ts-node/register src/server/main.ts",
    "start:client:dev": "cd src/client && webpack-dev-server --mode development",
    "build": "npm-run-all build:*",
    "build:server": "tsc --project src/server/tsconfig.json",
    "build:client": "cd src/client && webpack",
    "deploy:build": "docker build -t localhost:5000/sb-test:latest ./",
    "deploy:push": "docker push localhost:5000/sb-test:latest"
  },
